@using Microsoft.EntityFrameworkCore;
@model Anonymous_forum.Models.ThreadViewModel

@{
    ViewData["Title"] = "CreateComment";
}

<h2>Create New Comment</h2>

@using (Html.BeginForm("CreateComment", "Thread", FormMethod.Post))
{
    <fieldset>
        <div class="form-label">
            @Html.LabelFor(model => model.CommentText)
        </div>
        <div class="form-field">
            @Html.EditorFor(model => model.CommentText, new { @placeholder="Comment"})
            @Html.ValidationMessageFor(model => model.CommentText, "")
        </div>
        <div>
            <input type="submit" value="Create New Comment" />
        </div>
    </fieldset>
}