@using Microsoft.EntityFrameworkCore;
@model Anonymous_forum.Models.ThreadViewModel

@{
    ViewData["Title"] = "CreateThread";
}

<h2>Create New Thread</h2>
<p>@Html.ActionLink("Go back", "Index")</p>

@using (Html.BeginForm("CreateThread", "Thread", FormMethod.Post))
{
    <fieldset>
        <div class="form-label">
            @Html.LabelFor(model => model.ThreadTitle)
        </div>
        <div class="form-field">
            @Html.TextBoxFor(model => model.ThreadTitle, new { @placeholder="Title"})
            @Html.ValidationMessageFor(model => model.ThreadTitle, "")
        </div>
        <div class="form-label">
            @Html.LabelFor(model => model.ThreadText)
        </div>
        <div class="form-field">
            @Html.TextBoxFor(model => model.ThreadText, new { @placeholder="Text"})
            @Html.ValidationMessageFor(model => model.ThreadText, "")
        </div>
        <div class="form-label">
            @Html.LabelFor(model => model.Categories)
        </div>
        <div class="form-field">
            @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.Categories))
        </div>
        <div>
            <input type="submit" value="Create New Thread" />
        </div>
    </fieldset>
}